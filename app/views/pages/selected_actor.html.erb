<h1>Actor #<%=@actor[:id]%> details</h1>
<a href="/actors" >Go back</a>
<hr>
<dl>
    <dt>Name</dt>
    <dd><%=@actor[:name]%></dd>
    <dt>Dob</dt>
    <dd><%=@actor[:dob]%></dd>
    <dt>Bio</dt>
    <dd><%=@actor[:bio]%></dd>
    <dt>Image</dt>
    <dd><img width="250px" src="<%=@actor[:image]%>" alt="<%=@actor[:name]%>'s photo"></dd>
    <dt>Created at</dt>
    <dd><%=@actor[:created_at]%></dd>
    <dt>Updated at</dt>
    <dd><%=@actor[:updated_at]%></dd>
</dl>
<hr>
<h2>Filmography</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Character name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%@filmography.each do |role|%>
    <%movie = Movie.where(id: role.movie_id).first%>
    <%director = Director.where(id: movie.director_id).first%>
      <tr>
        <td><%=movie.title%></td>
        <td><%=movie.year%></td>
        <td><%=director.name%></td>
        <td><%=role.name%></td>
        <td><a href="movies/<%=movie.id%>">Show details</a></td>

      </tr>
    <%end%>
  </tbody>
</table>
