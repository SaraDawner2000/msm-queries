<h1>Director #<%=@director[:id]%> details</h1>
<a href="/directors" >Go back</a>
<hr>
<dl>
    <dt>Name</dt>
    <dd><%=@director[:name]%></dd>
    <dt>Dob</dt>
    <dd><%=@director[:dob]%></dd>
    <dt>Bio</dt>
    <dd><%=@director[:bio]%></dd>
    <dt>Image</dt>
    <dd><img width="250px" src="<%=@director[:image]%>" alt="<%=@director[:name]%>'s photo"></dd>
    <dt>Created at</dt>
    <dd><%=@director[:created_at]%></dd>
    <dt>Updated at</dt>
    <dd><%=@director[:updated_at]%></dd>
</dl>
<hr>
<h2>Filmography</h2>
<table>
  <thead>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </thead>
  <tbody>
  <%@filmography.each do |movie|%>
    <tr>
      <td><%=movie[:id]%></td>
      <td><img src="<%=movie[:image]%>" width="250px" alt="<%=movie[:title]%>'s poster"></td>
      <td><%=movie[:title]%></td>
      <td><%=movie[:year]%></td>
      <td><%= @director[:name] %></td>
      <td><a href="/movies/<%=movie[:id]%>">Show details</a></td>
    </tr>
  <%end%>
  </tbody>
</table>
